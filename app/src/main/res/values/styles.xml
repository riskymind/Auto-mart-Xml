<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_text_style">
        <item name="android:textColor">@color/caption_color</item>
        <item name="android:textSize">@dimen/screen_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="hintTextColor">@color/primary_color</item>
    </style>

    <style name="back_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/one_step_margin</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="srcCompat">@drawable/back_arrow</item>
        <item name="contentDescription">@string/back</item>
    </style>
</resources>